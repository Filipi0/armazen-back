
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
      
model Categoria {
  id          Int       @id @default(autoincrement())
  nome        String
  descricao   String?
  produtos    Produto[]
}

model Produto {
  id             Int            @id @default(autoincrement())
  nome           String
  descricao      String?
  preco          Float
  dataCriacao    DateTime       @default(now())
  categoriaId    Int
  categoria     Categoria      @relation(fields: [categoriaId], references: [id])

}